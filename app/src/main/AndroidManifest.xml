<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iboplus.app">

    <!-- ===== Permissões essenciais ===== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK"
        android:minSdkVersion="34" />
    <!-- Android 13+ (Tiramisu) notificações opcionais (se viermos a usar) -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        android:minSdkVersion="33" />
    <!-- Android 13+ leitura de mídia local (apenas se utilizarmos players/arquivos locais) -->
    <uses-permission
        android:name="android.permission.READ_MEDIA_VIDEO"
        android:minSdkVersion="33" />
    <uses-permission
        android:name="android.permission.READ_MEDIA_AUDIO"
        android:minSdkVersion="33" />

    <!-- ===== Compatibilidade TV & Mobile ===== -->
    <uses-feature android:name="android.software.leanback" android:required="false" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <!-- ===== Visibilidade de pacotes externos (players) ===== -->
    <!-- Permite checar se VLC / MX Player estão instalados para opção de player externo -->
    <queries>
        <package android:name="org.videolan.vlc" />
        <package android:name="com.mxtech.videoplayer.ad" />
        <package android:name="com.mxtech.videoplayer.pro" />
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="video/*" />
        </intent>
    </queries>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:label="IBO Plus"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- ===== Activity principal (Home/Navegação) ===== -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode"
            android:launchMode="singleTask"
            android:resizeableActivity="true"
            android:screenOrientation="sensorLandscape"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===== Activities de features (declaradas para evitar retrabalho depois) ===== -->
        <activity android:name=".ui.live.LiveActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />
        <activity android:name=".ui.vod.MoviesActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />
        <activity android:name=".ui.vod.SeriesActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />
        <activity android:name=".ui.account.AccountActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />
        <activity android:name=".ui.servers.ServersActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />
        <activity android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboardHidden|uiMode" />

        <!-- ===== Serviço de reprodução (ExoPlayer Foreground) ===== -->
        <service
            android:name=".player.MediaPlaybackService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- ===== Optional: Media Button Receiver (se usarmos controle por hardware) ===== -->
        <receiver
            android:name=".player.MediaButtonReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <!-- ===== (Opcional futuro) FileProvider caso venhamos a compartilhar arquivos ===== -->
        <!--
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        -->

    </application>
</manifest>
